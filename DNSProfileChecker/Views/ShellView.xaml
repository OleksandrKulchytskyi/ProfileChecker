<Window x:Class="Nuance.Radiology.DNSProfileChecker.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:conv="clr-namespace:Nuance.Radiology.DNSProfileChecker.Converters"
        Title="DNS Profile Checker" Height="550" Width="750" WindowStyle="ToolWindow" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="0.4*"/>
		</Grid.RowDefinitions>
		<ContentControl Name="ActiveItem" VerticalAlignment="Stretch" Height="362" Grid.Row="0"/>
		<ListView Grid.Row="1" x:Name="Logs">
			<ListView.Resources>
				<conv:SeverityToImageConverter x:Key="imageConverter"/>
			</ListView.Resources>
			<ListView.View>
				<GridView>
					<GridViewColumn Width="70" Header="Severity" >
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Image Source="{Binding Path=Severity, Converter={StaticResource imageConverter}}"  Width="25" Height="20"/>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Width="480" Header="Message" DisplayMemberBinding="{Binding Message}"/>
					<GridViewColumn Width="188" Header="Error" DisplayMemberBinding="{Binding Error}"/>
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Window>
